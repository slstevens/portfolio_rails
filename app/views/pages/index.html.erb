<div class="jumbotron" id="homepagejumbotron">
  <h1>Search for architects near you.</h1>
    <form class="form-horizontal" role="form">
    <div class="form-group form-group-lg">
      <label class="control-label" for="formGroupInputLarge"></label>
      <%= form_tag pages_index_path, :method => :get do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search here...", id: "formGroupInputLarge"%>
    	<%= submit_tag "Search Near", :name => nil %>
    	<% end %>
    </div>
  </form>
</div>

<h2>Featured Professionals</h2>

<%= render 'profile_cards' %>

<h2>Featured Projects</h2>

<% if can? :create, Project %>
<a href='projects/new'>Add a project</a>
<% end %>